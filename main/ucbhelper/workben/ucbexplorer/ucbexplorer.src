        {
            Identifier = MENU_NEW ;
            Text [ en-US ] = "~New" ;
        };
        MenuItem
        {
            Identifier = MENU_RENAME ;
            Text [ en-US ] = "~Rename" ;
        };
        MenuItem
        {
            Identifier = MENU_DELETE ;
            Text [ en-US ] = "~Delete" ;
        };
    };
};

